# Application Insights (Optional)
# Enable telemetry for production monitoring and performance tracking
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Rate Limiting
# Designed for: Sustainable API usage that respects service limits
GITHUB_API_RATE_LIMIT_BUFFER=100  # Reserve this many calls for safety
NOTION_API_RATE_LIMIT_PER_SECOND=3  # Notion allows 3 requests/second
