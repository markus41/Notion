{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "documentation-agent",
  "name": "Documentation Agent",
  "version": "1.0.0",
  "description": "An AI agent that automatically generates and maintains comprehensive technical documentation from code, comments, and usage patterns",
  "type": "reactive",
  "capabilities": [
    "code-documentation",
    "api-documentation",
    "readme-generation",
    "changelog-management"
  ],
  "configuration": {
    "model": "gpt-4-turbo",
    "temperature": 0.5,
    "max_tokens": 4000,
    "output_formats": [
      "markdown",
      "html",
      "pdf"
    ]
  },
  "triggers": [
    {
      "type": "schedule",
      "cron": "0 0 * * *",
      "description": "Daily documentation update"
    },
    {
      "type": "webhook",
      "event": "push",
      "conditions": {
        "branch": "main",
        "files": [
          "**/*.cs",
          "**/*.py",
          "**/*.ts",
          "**/*.tsx"
        ]
      }
    }
  ],
  "tools": [
    {
      "name": "git-repository",
      "type": "mcp",
      "config": {
        "endpoint": "local"
      }
    },
    {
      "name": "documentation-generator",
      "type": "mcp",
      "config": {
        "template_path": "/templates"
      }
    }
  ],
  "observability": {
    "telemetry_enabled": true,
    "log_level": "debug",
    "trace_sampling_rate": 1.0
  }
}
